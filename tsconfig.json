{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "skipLibCheck": true,
    "stripInternal": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": [
      "firebase"
    ]
  },
  "plugins": [
    {
      "name": "tslint-language-service"
    }
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "plugins"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  },
  "config": {
    "ionic_tslint": "./tslint.json"
  }
}
